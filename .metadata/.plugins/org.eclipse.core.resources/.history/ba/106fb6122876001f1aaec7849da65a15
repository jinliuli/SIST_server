<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%
	
	//변수의 종류?
	int a = 10; //지역변수
	
	/*
	public int sum(int a, int b) {
		return a + b;
	}
	*/

%>
<%!
	public int sum(int a, int b) {
		return a + b;
	}
%>
<!DOCTYPE html>
<html>
<head>
	<%
		System.out.println(a);
		int b = 20; //a와 같은 영역내의 지역 변수(_jspService메소드)
	%>
	<meta charset="UTF-8">
	<title></title>
	<link rel="stylesheet" href="http://bit.ly/3WJ5ilK">
	<style>
	
	</style>
</head>
<body>
	<!-- ex07_scriptlet.jsp -->
	<h1>연산 결과</h1>
	
	<!-- <div>a + b = <%= a + b %></div> -->
	<div>a + b = <%= sum(a,b) %></div>
	
	
	<script src="https://code.jquery.com/jquery-3.7.1.js"></script>
	<script src="https://bit.ly/4cMuheh"></script>
	<script>
	
	</script>
</body>
</html>